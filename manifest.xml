<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
           xsi:type="MailApp">

  <Id>96c84036-c670-4cd9-b89d-b00490f34423</Id>
  <Version>1.0.0.2</Version>
  <ProviderName>ZipMail</ProviderName>
  <DefaultLocale>fr-FR</DefaultLocale>
  <DisplayName DefaultValue="ZipMail"/>
  <Description DefaultValue="Compresse les messages et pièces jointes dans un fichier ZIP, avec option de chiffrement."/>
  <IconUrl DefaultValue="https://localhost:3000/assets/icon-zip-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://localhost:3000/assets/icon-zip-128.png"/>
  <SupportUrl DefaultValue="https://www.cea.fr"/>

  <AppDomains>
    <AppDomain>https://localhost:3000</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.9">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <Permissions>ReadWriteMailbox</Permissions>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.9">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url"/>

          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgComposeGroup">
                <Label resid="GroupLabel"/>
                <Control xsi:type="Menu" id="ZipMailMenu">
                  <Label resid="ZipMailMenuLabel"/>
                  <Supertip>
                    <Title resid="ZipMailMenuTitle"/>
                    <Description resid="ZipMailMenuDesc"/>
                  </Supertip>
                  <Icon>
                    <!-- tailles obligatoires : 16, 32, 80 ; on ajoute 64 et 128 en option -->
                    <bt:Image size="16" resid="IconZip.16x16"/>
                    <bt:Image size="32" resid="IconZip.32x32"/>
                    <bt:Image size="80" resid="IconZip.80x80"/>
                    <bt:Image size="64" resid="IconZip.64x64"/>
                    <bt:Image size="128" resid="IconZip.128x128"/>
                  </Icon>
                  <Items>
                    <Item id="ZipSimple">
                      <Label resid="ZipSimpleLabel"/>
                      <Supertip>
                        <Title resid="ZipSimpleTitle"/>
                        <Description resid="ZipSimpleDesc"/>
                      </Supertip>
                      <Icon>
                        <bt:Image size="16" resid="IconZip.16x16"/>
                        <bt:Image size="32" resid="IconZip.32x32"/>
                        <bt:Image size="80" resid="IconZip.80x80"/>
                        <bt:Image size="64" resid="IconZip.64x64"/>
                        <bt:Image size="128" resid="IconZip.128x128"/>
                      </Icon>
                      <Action xsi:type="ExecuteFunction" FunctionName="enableZip"/>
                    </Item>

                    <Item id="ZipEncrypted">
                      <Label resid="ZipEncryptedLabel"/>
                      <Supertip>
                        <Title resid="ZipEncryptedTitle"/>
                        <Description resid="ZipEncryptedDesc"/>
                      </Supertip>
                      <Icon>
                        <bt:Image size="16" resid="IconZipLocked.16x16"/>
                        <bt:Image size="32" resid="IconZipLocked.32x32"/>
                        <bt:Image size="80" resid="IconZipLocked.80x80"/>
                        <bt:Image size="64" resid="IconZipLocked.64x64"/>
                        <bt:Image size="128" resid="IconZipLocked.128x128"/>
                      </Icon>
                      <Action xsi:type="ExecuteFunction" FunctionName="enableZipEncrypted"/>
                    </Item>
                  </Items>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

          <ExtensionPoint xsi:type="Events">
            <!-- on-send officiel -->
            <Event Type="OnMessageSend" FunctionName="onMessageSend"/>
            <!-- gestion des modifs pièces jointes -->
            <Event Type="OnMessageAttachmentsChanged" FunctionName="onMessageAttachmentsChanged"/>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="IconZip.16x16" DefaultValue="https://localhost:3000/assets/icon-zip-16.png"/>
        <bt:Image id="IconZip.32x32" DefaultValue="https://localhost:3000/assets/icon-zip-32.png"/>
        <bt:Image id="IconZip.64x64" DefaultValue="https://localhost:3000/assets/icon-zip-64.png"/>
        <bt:Image id="IconZip.80x80" DefaultValue="https://localhost:3000/assets/icon-zip-80.png"/>
        <bt:Image id="IconZip.128x128" DefaultValue="https://localhost:3000/assets/icon-zip-128.png"/>

        <bt:Image id="IconZipLocked.16x16" DefaultValue="https://localhost:3000/assets/icon-zip-locked-16.png"/>
        <bt:Image id="IconZipLocked.32x32" DefaultValue="https://localhost:3000/assets/icon-zip-locked-32.png"/>
        <bt:Image id="IconZipLocked.64x64" DefaultValue="https://localhost:3000/assets/icon-zip-locked-64.png"/>
        <bt:Image id="IconZipLocked.80x80" DefaultValue="https://localhost:3000/assets/icon-zip-locked-80.png"/>
        <bt:Image id="IconZipLocked.128x128" DefaultValue="https://localhost:3000/assets/icon-zip-locked-128.png"/>
      </bt:Images>

      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://localhost:3000/commands.html"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://localhost:3000/taskpane.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="ZipMail"/>
        <bt:String id="ZipMailMenuLabel" DefaultValue="Zip"/>
        <bt:String id="ZipMailMenuTitle" DefaultValue="ZipMail"/>
        <bt:String id="ZipSimpleLabel" DefaultValue="Zip Simple"/>
        <bt:String id="ZipSimpleTitle" DefaultValue="Compression simple"/>
        <bt:String id="ZipEncryptedLabel" DefaultValue="Zip Chiffré"/>
        <bt:String id="ZipEncryptedTitle" DefaultValue="Compression chiffrée"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="ZipMailMenuDesc" DefaultValue="Compresse le message et les pièces jointes en un fichier ZIP."/>
        <bt:String id="ZipSimpleDesc" DefaultValue="Créer un ZIP sans mot de passe."/>
        <bt:String id="ZipEncryptedDesc" DefaultValue="Créer un ZIP protégé par mot de passe."/>
      </bt:LongStrings>
    </Resources>

  </VersionOverrides>
</OfficeApp>
