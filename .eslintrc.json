{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
	"plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "html",
    "prettier"
  ],
  "globals": {
    "Office": "readonly"
  },
  "settings": {
    "html/html-extensions": [".html"]
  },
  "overrides": [
    {
      "files": ["src/**/*.html"],
      "processor": "html/extract"
    },
    {
      "files": ["*.html"],
      "excludedFiles": ["src/**/*.html"]
    }
  ],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-undef": "error",
	"prettier/prettier": "error"
  }
}
