{
  "name": "zipmail",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/olahaye74/ZipMail.git"
  },
  "license": "MIT",
  "config": {
    "app_to_debug": "outlook",
    "app_type_to_debug": "desktop",
    "dev_server_port": 3000
  },
  "scripts": {
    "setup": "node setup.js",
    "dist": "node make-dist.js",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "dev-server": "webpack serve --mode development",
    "dev-mac": "NODE_ENV=development npm run dev-server",
    "dev-win": "set NODE_ENV=development && npm run dev-server",
    "lint": "npx eslint \"src/**/*.js\"",
    "lint:fix": "npx eslint \"src/**/*.js\" --fix",
    "prettier": "office-addin-lint prettier",
    "signin": "office-addin-dev-settings m365-account login",
    "signout": "office-addin-dev-settings m365-account logout",
    "start": "office-addin-debugging start manifest.xml",
    "stop": "office-addin-debugging stop manifest.xml",
    "validate": "office-addin-manifest validate manifest.xml",
    "watch": "webpack --mode development --watch"
  },
  "dependencies": {
    "@zip.js/zip.js": "^2.8.7",
    "core-js": "^3.36.0",
    "crypto-js": "^4.2.0",
    "jszip": "^3.10.1",
    "regenerator-runtime": "^0.14.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.25.4",
    "@types/office-js": "^1.0.377",
    "@types/office-runtime": "^1.0.35",
    "acorn": "^8.11.3",
    "archiver": "^7.0.1",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^12.0.2",
    "eslint-plugin-office-addins": "^4.0.3",
    "eslint-plugin-prettier": "^5.5.4",
    "file-loader": "^6.2.0",
    "html-loader": "^5.0.0",
    "html-webpack-plugin": "^5.6.0",
    "inquirer": "^12.9.6",
    "office-addin-cli": "^1.5.5",
    "office-addin-debugging": "^2.1.12",
    "office-addin-dev-certs": "^2.0.3",
    "office-addin-lint": "^3.0.3",
    "office-addin-manifest": "^2.0.3",
    "office-addin-prettier-config": "^2.0.1",
    "os-browserify": "^0.3.0",
    "prettier": "^3.6.2",
    "process": "^0.11.10",
    "source-map-loader": "^5.0.0",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  },
  "prettier": "office-addin-prettier-config",
  "browserslist": [
    "last 2 versions",
    "ie 11"
  ],
  "version": "1.0.0",
  "description": "ZipMail is an Outlook add-in that automatically: - Compresses the message body and attachments into a single `msg.zip` - Optionally encrypts the ZIP with a password (AES) - Automatically decompresses received messages so users see the original mail",
  "main": "babel.config.js",
  "keywords": [],
  "author": "Olivier LAHAYE",
  "bugs": {
    "url": "https://github.com/olahaye74/ZipMail/issues"
  },
  "homepage": "https://github.com/olahaye74/ZipMail#readme"
}
